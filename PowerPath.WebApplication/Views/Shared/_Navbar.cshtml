@{
    string? username = Context.Items["Username"] as string;
}

<nav class="Navbar navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <span class="navbar-brand Logo">Power Path</span>
        <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @((string?)ViewData["Title"] == "Medidores" ? "active" : "")" asp-controller="Medidor" asp-action="Index"><i class="fa-solid fa-tablet-screen-button"></i>Medidores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @((string?)ViewData["Title"] == "Histórico" ? "active" : "")" asp-controller="Log" asp-action="Index"><i class="fa-solid fa-book"></i>Histórico</a>
                </li>
            </ul>
            @if (!string.IsNullOrWhiteSpace(username))
            {
                <span class="navbar-text Username">
                    Bem-vindo, <span>@(username)</span>!
                </span>
            }
        </div>
    </div>
</nav>